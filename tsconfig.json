{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM", "dom.iterable",
      "ES5",
      "ES6",
      "ES7"
    ],
    "jsx": "react",
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/tldraw_v1/writing/writing-embed-preview",
    "src/tldraw_v2/writing/writing-embed-preview",
  ],
}
